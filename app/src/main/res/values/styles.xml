<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
<!--  toolbar 样式  -->
    <style name="MyToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">#000</item><!-- 更改溢出文字颜色-->
        <item name="android:textSize">25dp</item>
        <item name="overlapAnchor">false</item><!-- 设置menu窗口不覆盖Toolbar试图-->
    </style>
    <style name="HomePage.Toolbar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">25dp</item>
        <item name="android:actionMenuTextColor">#fff</item>
    </style>
<!--  EditText 下划线 -->
    <style name="EditTextStyle">
        <!--表示控件默认的颜色-->
        <item name="android:colorControlNormal" tools:targetApi="lollipop">#fff</item>
        <!--表示控件被激活时的颜色-->
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#FFC107</item>
    </style>
<!--    switch颜色-->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#FF0000</item>
        <item name="colorSwitchThumbNormal">#0033FF</item>
        <item name="android:colorForeground">#FFC107</item>
    </style>

<!--editText下划线颜色-->
    <style name="editTextUnderline" parent="Theme.AppCompat.Light">
<!-- 默认颜色-->
        <item name="colorControlNormal">#fff</item>
<!-- 选中颜色-->
        <item name="colorControlActivated">#FFC107</item>
    </style>
</resources>